	<profiles>


		<profile>
			<id>not-minified</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>

			<build>
				<plugins>
					<plugin>
						<artifactId>maven-resources-plugin</artifactId>
						<version>2.7</version>
						<executions>
							<execution>
								<id>copy-resources</id>
								<phase>package</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<outputDirectory>${project.parent.basedir}/catalog-fe/src/main/webapp</outputDirectory>
									<resources>
										<resource>
											<directory>${project.basedir}/app</directory>
											<includes>
												<include>languages/**</include>
												<include>scripts/**</include>
												<include>styles/**</include>
												<include>third-party/**</include>
												<include>index.html</include>
												<include>robots.txt</include>
												<include>favicon.png</include>
											</includes>
											<filtering>false</filtering>
										</resource>
										<resource>
											<directory>${project.basedir}</directory>
											<includes>
												<include>bower_components/**</include>
											</includes>
											<filtering>false</filtering>
										</resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
